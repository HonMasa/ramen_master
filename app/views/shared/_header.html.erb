<header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <h1><%= link_to "Ramen-Master", top_index_path %></h1>
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to("/users/#{current_user.id}") do %>
              <% if current_user.image? %>
                <img src='<%= current_user.image %>' class="icon_image rounded-circle" alt="ユーザーアイコン" height="50" width="50">
              <% else %>
                <image src="/assets/default.png" class="icon_image rounded-circle" alt="ユーザーアイコン" height="50" width="50" %>
              <% end %>
              <%= current_user.name %>
            <% end %>
          </li>
        <% end %>
        
        <button class="navbar-toggler" id="mainbtn" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="#navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        <div class="collapse navbar-collapse justify-content-end links" id="navbarNav">
            <ul class="nav navbar-nav" >
              <li class="nav-item active"><%= link_to "トップへ", top_index_path %></li>
              <% if user_signed_in? %>
                <li class="nav-item active"><%= link_to "新規投稿", "/posts/new" %></li>
                <li class="nav-item active"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li class="nav-item active"><%= link_to "会員登録", new_user_registration_path %></li>
                <li class="nav-item active"><%= link_to "ログイン", new_user_session_path %></li>
              <% end %>
            </ul>
        </div>
      </nav>
    </header>