<h1><%= @user.name %></h1>
<% if @user.image? %>
  <img src='<%= @user.image %>' class="icon_image rounded-circle" alt="ユーザーアイコン" height="200" width="200">
<% else %>
  <img src="/assets/default.png" class="icon_image rounded-circle" alt="ユーザーアイコン" height="200" width="200">
<% end %>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>
<div id="relationship">
  <%= render "relationship" %>
</div>
<div>
  <%= render "follow_form" %>
</div>
<% if current_user != nil %>
  <% if @user.id == current_user.id && current_user.email != "guest@example.com" %>
    <%= link_to "編集", "/users/edit", class: 'btn btn-success' %>
    <%= link_to "削除", "/users", class: 'btn btn-danger', method: :delete, data: {confirm: "ユーザーを削除しますか？"} %>
  <% end %>
<% end %>
<h3>いいねしている投稿</h3>
<div class="container">
  <div class="row">
    <%= render "shared/post_card", posts: @user.liked_posts %>
  </div>
</div>
